<h1>Eat the Burger !</h1>

<h2>Available burgers</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
 <li>
	{{name}}

	<button class="Devoured" data-id="{{id}}" data-devoured="{{devoured}}">devour
	</button>
</li>

    {{/unless}}
  {{/each}}
</ul>

<h3>Devoured burgers</h3>

<ul>
  {{#each burgers}}
    {{#if devoured}}
</ul>
<li>
	{{name}}
</li>

    {{/if}}
  {{/each}}
<div class="container">
<div id="p2">
<h3>Add a Burger</h3>
<form action = "/burger" method = "POST" class="create-form">

  <div class ="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>
</div>
</div>
  <button type ="submit" class="create-form">Add Burger</button>

</form>
