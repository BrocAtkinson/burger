<h1>Eat the Burger !</h1>

<h2>Available burgers</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
 <li>
	{{name}}

	<button class="Devoured" data-id="{{id}}" data-devoured="{{devoured}}">devour
	</button>
</li>

    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
<li>
	{{name}}

</li>

    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="#ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
